package JavaTest_10;

interface USB// 暴露的规则。
{
	public void open();
	public void close();
}

class UPan implements USB
{
	public void open()
	{
		System.out.println("upan open");
	}
	public void close()
	{
		System.out.println("upan close");
	}

}



public class BookPC {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		useUSB(new UPan());//功能扩展了。
		useUSB(new UsbMouse());
		
	}

}
